		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
		
	<servlet-mapping>
		<servlet-name>orderQaaAppServlet</servlet-name>
		<url-pattern>*.od</url-pattern>
	</servlet-mapping>	
	
	
	<!-- 지현 -->
	
	<servlet>
